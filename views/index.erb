<div id="groups" style="float:left; width:45%; margin:5px;">
	<h2>Groups</h2>
	<a class="button" style="float:right;" onclick="HideAll()">Collapse all</a>
	<a class="button" style="float:right;" onclick="ShowAll()">Expand all</a><br>

	<div id="groups_tree" style="float:left; width:45%;">
		<% @groups.each do |g| %>
			<%= g.to_tree(@elements) %>
		<% end %>
	</div>
</div>
<div id="cases" style="float:right; width:48%">
<h2>Cases</h2>
<% @cases.each do |c| %>
  <div class="case" id="<%= "#{c.name}"%>" data-search='true' data-searchid="<%= "#{c.name}"%>">
    <div class="caseHead"><a href="/cases/edit/<%= c.id %>"><%= "#{c.name}" %></a></div>
	<p><div id="Code_<%= c.id %>" style="width:100%; height: 100px;"><%= c.code %></div>
	<script>
	    var editor = ace.edit("Code_<%= c.id %>");
	    console.debug("Code_<%= c.id %>")
	    editor.setTheme("ace/theme/chrome");
	    editor.setReadOnly(true);
	    editor.getSession().setMode("ace/mode/ruby");
		editor.resize();
	</script>	
  </div>
<% end %>
</div>

<script>
	HideAll();
	GetDivs();
</script>